<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="DABSquared\PushNotificationsBundle\Entity\Message">

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type"  type="integer" />

        <field name="message" type="text" />

        <field name="createdAt" type="datetime" />

        <one-to-many field="device" target-entity="DABSquared\PushNotificationsBundle\Entity\Device" mapped-by="messages" />


    </mapped-superclass>

</doctrine-mapping>
